# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_payments
DB_USER=postgres
DB_PASSWORD=postgres

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3000
AUTH_SERVICE_TOKEN=your_auth_service_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_for_validation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=5

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_API_VERSION=2024-06-20

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Payment Processing
CURRENCY=eur
DEFAULT_PAYMENT_METHODS=card,sepa_debit,sofort,paypal
MIN_AMOUNT=100
MAX_AMOUNT=1000000
REFUND_WINDOW_DAYS=30

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SIGNATURE_VALIDATION=true

# Invoice Configuration
INVOICE_PREFIX=INV
INVOICE_NUMBER_LENGTH=8
INVOICE_TAX_RATE=0.20
INVOICE_COMPANY_NAME=Event Planner SaaS
INVOICE_COMPANY_ADDRESS=123 Business Street, City, Country
INVOICE_COMPANY_EMAIL=billing@eventplanner.com
INVOICE_COMPANY_PHONE=+33612345678
INVOICE_COMPANY_SIRET=12345678901234

# PDF Configuration
PDF_LOGO_PATH=./assets/logo.png
PDF_FOOTER_TEXT=Thank you for your business!
PDF_FONT_FAMILY=Helvetica
PDF_FONT_SIZE=12

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379/6
QUEUE_DEFAULT_JOB_OPTIONS_REMOVE_ON_COMPLETE=10
QUEUE_CONCURRENCY_WEBHOOKS=5
QUEUE_CONCURRENCY_INVOICES=3
QUEUE_CONCURRENCY_REFUNDS=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT=5_PER_MINUTE

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Security
API_KEY=your_payment_service_api_key
WEBHOOK_SECRET=your_webhook_secret

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9093

# Subscription Configuration
SUBSCRIPTION_PLANS=basic,premium,enterprise
SUBSCRIPTION_TRIAL_DAYS=14
SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Notification Service Configuration
NOTIFICATION_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_TOKEN=your_notification_service_token

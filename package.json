{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "Payment Service - Stripe/PayPal integration with webhooks and PDF invoices",
  "main": "src/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:payment": "NODE_ENV=test node tests/unit/payment.service.test.js",
    "test:wallet": "NODE_ENV=test node tests/unit/wallet.service.test.js",
    "test:full-flow": "NODE_ENV=test node tests/integration/full-flow.test.js"
  },
  "keywords": [
    "event-planner",
    "payment-service",
    "stripe",
    "paypal",
    "webhooks",
    "invoices",
    "refunds",
    "subscriptions",
    "nodejs",
    "express",
    "backend",
    "api",
    "saas"
  ],
  "author": "Hassid Belkassim",
  "license": "MIT",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "axios": "^1.13.2",
    "bull": "^4.12.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "stripe": "^20.2.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
